-- Criação das views para visualização dos dados das tabelas criadas no batabase olist

CREATE OR REPLACE VIEW view_tb_customers AS SELECT * FROM ecommerce.tb_customers;
CREATE OR REPLACE VIEW view_tb_geolocation AS SELECT * FROM ecommerce.tb_geolocation;
CREATE OR REPLACE VIEW view_tb_order_items AS SELECT * FROM ecommerce.tb_order_items;
CREATE OR REPLACE VIEW view_tb_order_payments AS SELECT * FROM ecommerce.tb_order_payments;
CREATE OR REPLACE VIEW view_tb_order_reviews AS SELECT * FROM ecommerce.tb_order_reviews;
CREATE OR REPLACE VIEW view_tb_orders AS SELECT * FROM ecommerce.tb_orders;
CREATE OR REPLACE VIEW view_tb_products AS SELECT * FROM ecommerce.tb_products;
CREATE OR REPLACE VIEW view_tb_sellers AS SELECT * FROM ecommerce.tb_sellers;

SELECT customer_id, customer_unique_id, customer_zip_code_prefix, customer_city, customer_state
	FROM view_tb_customers;

SELECT geolocation_zip_code_prefix, geolocation_lat, geolocation_lng, geolocation_city, geolocation_state
	FROM view_tb_geolocation;
       
SELECT order_id, order_item_id, product_id, seller_id, shipping_limit_date, price, freight_value
	FROM view_tb_order_items;    
    
SELECT order_id, payment_sequential, payment_type, payment_installments, payment_value
	FROM view_tb_order_payments;    
    
SELECT review_id, order_id, review_score, review_comment_title, review_comment_message, review_creation_date, review_answer_timestamp
	FROM view_tb_order_reviews;
    
SELECT order_id, customer_id, order_status, order_purchase_timestamp, order_approved_at, order_delivered_carrier_date, order_delivered_customer_date, order_estimated_delivery_date
	FROM view_tb_orders;

SELECT product_id, product_category_name, product_name_lenght, product_description_lenght, product_photos_qty, product_weight_g, product_length_cm, product_height_cm, product_width_cm
	FROM view_tb_products;
    
SELECT seller_id, seller_zip_code_prefix, seller_city, seller_state
	FROM view_tb_sellers;
